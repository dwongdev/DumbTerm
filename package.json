{
  "name": "dumbterm",
  "version": "1.0.0",
  "description": "A stupidly simple web-based terminal emulator.",
  "main": "server.js",
  "scripts": {
    "start": "npm run copy-xterm && node server.js",
    "dev": "npm run copy-xterm && nodemon server.js",
    "copy-xterm": "mkdir -p public/node_modules/@xterm && cp -r node_modules/@xterm/xterm node_modules/@xterm/addon-* public/node_modules/@xterm/"
  },
  "dependencies": {
    "@xterm/addon-attach": "^0.11.0",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-image": "^0.8.0",
    "@xterm/addon-ligatures": "^0.8.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "node-pty": "^1.0.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
